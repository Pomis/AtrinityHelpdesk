<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_request_number"
            android:text="#0000000000123"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_request_title"
            android:text="Название завки"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_request_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_below="@id/tv_request_title"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:id="@+id/tv_request_status"
            android:text="Статус"
            android:background="@drawable/background_status_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_request_datetime"
            android:text="4:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_request_status"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>